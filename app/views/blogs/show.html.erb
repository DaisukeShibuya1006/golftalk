<div class="container">
<p>
  <strong>タイトル:</strong><br>
  <%= @blog.title %>
</p>

  <p>
    <% if @blog.image? %>
    <%= image_tag @blog.image.url%>
    <% end %>
  </p>
<p>
  <strong>投稿内容</strong><br>
  <%= @blog.content %>
</p>
<%= link_to(@user.name,"/users/#{@user.id}") %><br />
<img src=<%= @user.image %> class = "icon_image"><br>

<h4>コメント一覧</h4>
<% if @blog.comments.any? %>
<ul>
  <% @blog.comments.each do |comment| %>
    <li><%= comment.body %></li>
  <% end %>
</ul>
<% end %>

<%= form_for([@blog, @blog.comments.build]) do |f| %>
  <p><%= f.text_field :body%></p>
  <%= f.submit %>
<% end %>

aaaa <br>

<%= link_to '投稿一覧に戻る', blogs_path %>
</div>
