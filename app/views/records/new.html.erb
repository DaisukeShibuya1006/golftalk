<div class="container">
  <h1>情報を入力してください。</h1>
  <%= form_for @record do |f| %>
      <div class="form-group">
          <%= f.label :when, '日付' %>
          <%= f.text_field :when, class: 'form-control' %>
          <small id="poster-tip" class="form-text text-muted">
              プレー日を入力してください。
          </small>
      </div>
      <div class="form-group">
          <%= f.label :course, 'コース名' %>
          <%= f.text_field :course, class: 'form-control' %>
          <small id="poster-tip" class="form-text text-muted">
              プレーしたコース名を入力してください。
          </small>
      </div>

      <%= f.submit '投稿', class: 'btn btn-info' %>
  <% end %>
</div>
