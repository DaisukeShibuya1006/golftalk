<div class="container">
  <h1>ユーザー情報</h1>
  <%= @user.name %><br />
  <%= @user.email %><br />
  <img src=<%= @user.image %> class = "icon_image"><br>

　<% if @user.id == current_user.id %>
  <a href="/users/edit">
     <button type="button">編集</button>
  </a>
  <% end %>

 <h3><%= @user.name %>さんの投稿一覧</h3>
  <% @user.blogs.each do |blog| %>
  <div class="title">
    <h3>タイトル</h3>
    <%= blog.title %>
  </div>
  <div class="image">
    <img src=<%= blog.image %>>
  </div>
  <div class="content">
    <h3>内容</h3>
    <%= blog.content %><br>
  </div>
  <%= link_to '詳細', blog_path(blog) %><br>
    <% if blog.uid == current_user.id %>
      <%= link_to '編集', edit_blog_path(blog), class: "btn btn-info w-100px" %>
      <%= link_to '削除', blog, class: "btn btn-info w-100px", method: :delete, data: { confirm: '本当に削除して良いですか？' } %>
      <% end %>
    <% end %>
</div>
