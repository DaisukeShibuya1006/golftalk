<div class="like-link" id="like-link-<%= blog.id %>">
  <% if current_user.likes.find_by(blog_id: blog.id) %>
    <%= link_to unlike_path(blog.id), method: :delete, remote: true do %>
        <div class = "iine__button">❤️<%= blog.likes.count %></div>
    <% end %>
  <% else %>
    <%= link_to like_path(blog.id), method: :post, remote: true do %>
        <div class = "iine__button">♡️<%= blog.likes.count %></div>
    <% end %>
  <% end %>
</div>
